{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "testRunner": "jest",
  "checkers": [],
  "jest": {
    "configFile": "jest.stryker.cjs"
  },
  "mutate": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/preload/**/*.ts",
    "!src/renderer/**/*.ts"
  ],
  "reporters": ["html", "clear-text", "progress"],
  "coverageAnalysis": "off",
  "timeoutMS": 10000,
  "concurrency": 4,
  "htmlReporter": {
    "fileName": "reports/mutation/index.html"
  },
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": null
  }
}
